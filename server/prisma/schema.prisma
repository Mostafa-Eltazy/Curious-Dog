// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  email     String     @unique
  password  String
  username  String     @unique
  Question  Question[]

  @@map("users")
}

model Question {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  body         String   @db.VarChar(600)
  answer       String?  @db.VarChar(600)
  Like         Int      @default(0)
  questionerId Int
  questioner   User     @relation(fields: [questionerId], references: [id])
  answererId   Int
  answerer     User     @relation(fields: [answererId], references: [id])

  @@map("questions")
}

model QuestionLike {
}
