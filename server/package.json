{
  "name": "node-ts-new-project",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "node build/server.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:create": "prisma migrate dev --create-only",
    "db:generate": "prisma generate",
    "watch:compile": "env-cmd nodemon src/server.ts",
    "watch:typing": "tsc --noEmit --watch",
    "watch": "run-p watch:compile watch:typing",
    "lint": "eslint --ext .js,.ts ."
  },
  "engines": {
    "node": "16"
  },
  "main": "build/server.js",
  "dependencies": {
    "@google-cloud/storage": "^6.2.2",
    "@prisma/client": "^4.3.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.1",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@swc-node/register": "^1.5.1",
    "@swc/core": "^1.2.186",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^14.18.28",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "prisma": "^4.3.1",
    "run-p": "^0.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
